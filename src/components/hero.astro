---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Kodingkids jogja hero image"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold text-primary lg:tracking-tight xl:tracking-tighter ">
      KodingKids, where every kids learn <span class="text-secondary">Code</span>
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      KodingKids is place where kids can learn Computational Code in easy and fun way for kids age 4 up to 12
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      
      <Link
        size="lg"
        rel="noopener"
        href="https://linktr.ee/kodingkidsjogja"
        class="flex gap-1 items-center justify-center bg-primary text-white hover:bg-primary/90"
        target="_blank">
        <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" >
          <path fill="currentColor" d="M19.95 21q-3.125 0-6.175-1.362t-5.55-3.863q-2.5-2.5-3.862-5.55T3 4.05q0-.45.3-.75t.75-.3H8.1q.35 0 .625.238t.325.562l.65 3.5q.05.4-.025.675T9.4 8.45L6.975 10.9q.5.925 1.187 1.787t1.513 1.663q.775.775 1.625 1.438T13.1 17l2.35-2.35q.225-.225.588-.337t.712-.063l3.45.7q.35.1.575.363T21 15.9v4.05q0 .45-.3.75t-.75.3" />
        </svg>
        
        Call Us
      </Link>
    </div>
  </div>
</main>

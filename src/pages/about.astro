---
import { getCollection } from "astro:content";
import { Picture } from "astro:assets";
import alvinImage from "assets/alvin_image.png";
import liaImage from "assets/lia_image.png";
import aiImage from "assets/ai_image.png";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

// Filter team entries with 'draft: false' & date before current date
const publishedTeamMembers = await getCollection("team", ({ data }) => {
  return !data.draft && data.publishDate < new Date();
});
---

<Layout title="About">
  <Container>
    <Sectionhead>
      <Fragment slot="title">About</Fragment>
      <Fragment slot="desc">KodingKids Team Jogja</Fragment>
    </Sectionhead>

    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <h2 class="font-bold text-3xl text-gray-800">
        Help Kids to learn code in easy way
      </h2>
      <p class="text-lg leading-relaxed text-slate-500">
        Make Coding a Playground, Not a Lecture
      </p>
    </div>
    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-4xl mt-12">
      <div class="group">
        <div class="w-full aspect-square">
          <Picture
            src={alvinImage}
            alt="kodingkids founder"
            sizes="(max-width: 800px) 100vw, 400px"
            width={400}
            height={400}
            class="w-full rounded-md transition group-hover:-translate-y-1 group-hover:shadow-xl bg-white object-cover object-center aspect-square"
          />
        </div>

        <div class="mt-4 text-center">
          <h2 class="text-lg text-gray-800">Alvin Christianto</h2>
          <h3 class="text-sm text-slate-500">Founder, Developer & Lecturer</h3>
        </div>
      </div>

      <div class="group">
        <div class="w-full aspect-square">
          <Picture
            src={liaImage}
            alt="kodingkids founder"
            sizes="(max-width: 800px) 100vw, 400px"
            width={400}
            height={400}
            class="w-full rounded-md transition group-hover:-translate-y-1 group-hover:shadow-xl bg-white object-cover object-center aspect-square"
          />
        </div>

        <div class="mt-4 text-center">
          <h2 class="text-lg text-gray-800">Lia Dwi</h2>
          <h3 class="text-sm text-slate-500">Admin & Finance</h3>
        </div>
      </div>

      <div class="group">
        <div class="w-full aspect-square">
          <Picture
            src={aiImage}
            alt="kodingkids founder"
            sizes="(max-width: 800px) 100vw, 400px"
            width={400}
            height={400}
            class="w-full rounded-md transition group-hover:-translate-y-1 group-hover:shadow-xl bg-white object-cover object-center aspect-square"
          />
        </div>

        <div class="mt-4 text-center">
          <h2 class="text-lg text-gray-800">Andi Prama</h2>
          <h3 class="text-sm text-slate-500">Lecturer</h3>
        </div>
      </div>
    </div>
  </Container>
</Layout>
